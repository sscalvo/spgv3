{
  "name": "SPG - Seating Plan Generator v3",
  "description": "CALM4 Extension",
  "version": "3.0",
  "permissions": [
    "tabs", "https://*/*"
  ],  
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "content_scripts": [
    { "run_at": "document_end",
      "matches": ["https://calm.dhamma.org/*/course_applications", "https://test.calm.dhamma.org/*/course_applications"],
      "js": ["lib/jquery-3.1.1.js", "lib/redips-drag-source.js", "content.js"]
    }
  ],
  "browser_action": {
      "default_title": "Seating Plan Generator v3",
      "default_icon": "icons/enabled.png",
      "default_popup": "popup_enabled.html"
  },
  "icons": { "16": "icons/icon16.png",
           "48": "icons/icon48.png",
          "128": "icons/icon128.png" 
  },
  "manifest_version": 2,
  
  "web_accessible_resources": [
        "html/sp_tab.html",
        "img/circular.gif",
		"css/sitPlan.css",
		"css/loc.css",
		"icons/enabled.png",
		"icons/disabled.png"
    ]
}
